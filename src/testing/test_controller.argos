<?xml version="1.0" ?>
<argos-configuration>

    <framework>
        <experiment length="5000"
                    ticks_per_second="10"/>
    </framework>

    <controllers>
        <test_controller id="test_controller"
                         library="build_linux/testing/libtest_controller.so">
            <actuators>
                <epuck_wheels implementation="default"/>
            </actuators>

            <sensors>
                <epuck_proximity implementation="default" show_rays="false"/>
            </sensors>

            <params/>
        </test_controller>
    </controllers>

    <arena size="5,5,1" center="0,0,0.5">
        <e-puck id="ep0">
            <body position="0,0,0" orientation="0,0,0"/>
            <controller config="test_controller" />
        </e-puck>
    </arena>

    <physics_engines>
        <dynamics2d id="dyn2d" />
    </physics_engines>

    <media/>

    <visualization>
        <qt-opengl/>
    </visualization>

</argos-configuration>
